<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.ARO" parent="android:Theme">
		<item name="android:windowNoTitle">true</item>
		<!-- <item name="android:windowBackground">@null</item> -->
	</style>
	<style name="Theme.ARODialog" parent="android:Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
	</style>
	<style name="BaseButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">22sp</item>
	</style>

	<style name="BlueButton" parent="BaseButton">
		<item name="android:background">@drawable/blue_button</item>
		<item name="android:textColor">@drawable/white</item>
	</style>

    <style name="Theme.AROSplash" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
</resources>
