<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="@drawable/gray" android:layout_height="fill_parent">
	<RelativeLayout android:orientation="vertical"
		android:id="@+id/main_title_layer" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_centerInParent="true">
		<Button android:text="@string/aro_killtasks" android:id="@+id/btn_arotaskmanagerkill"
			android:paddingBottom="0dip" android:paddingTop="0dip" style="@style/BlueButton"
			android:textSize="16sp" android:layout_marginTop="5dp"
			android:layout_marginLeft="60dp" android:layout_height="40dip" />
		<CheckBox android:id="@+id/aro_selectall"
			android:layout_centerInParent="true" android:layout_alignParentRight="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:checked="false" android:layout_marginRight="5dip" />
	</RelativeLayout>
	<RelativeLayout android:orientation="vertical"
		android:id="@+id/main_control_layer" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:visibility="gone">
	</RelativeLayout>
	<ListView android:id="@+id/listbody" android:layout_width="fill_parent"
		android:layout_above="@id/main_control_layer" android:layout_below="@id/main_title_layer"
		android:layout_height="fill_parent" android:scrollbars="none|vertical"
		android:layout_marginTop="15dp"
		android:choiceMode="multipleChoice"
		android:layout_alignWithParentIfMissing="true" />
</RelativeLayout>
	